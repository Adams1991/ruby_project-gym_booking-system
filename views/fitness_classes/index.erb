<% for fitness_class in @fitness_classes %>
  <p>Name: <%= fitness_class.name() %> </p>
  <p>Capacity: <%= fitness_class.capacity() %> </p>
  <p>Duration: <%= fitness_class.duration() %> </p>
  <p>Premium Members Only: <%= fitness_class.convert_boolean() %> </p>
  <p>Start Time: <%= fitness_class.start_time()%> </p>
  <ul>
    <li class="dropdown">
      <a href="javascript:void(0)" class="dropbtn">Options</a>
      <div class="dropdown-content">
        <a class="button" href="/fitness_classes/<%= fitness_class.id()  %>/edit">Edit Class Details</a>
        <a class="button" href="/fitness_classes/<%= fitness_class.id()  %>/delete">Remove Class</a>
        <a class="button" href="/fitness_classes/<%= fitness_class.id()  %>/boxers">Boxers Booked in</a>
      </div>
    </li>
  </ul>
  <hr />
<% end %>
