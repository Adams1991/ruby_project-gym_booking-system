<form method="post" action="/fitness_classes">
  <label for="name">Class Name:</label>
  <input required id="name" type="text" name="name"/>

  <label for="capacity">Capacity:</label>
  <input required id="capacity" type="text" name="capacity"/>

  <label for="duration">Duration:</label>
  <input required id="duration" type="text" name="duration"/>

  <label for="premium-member">Premium Member:</label>
  <select name="premium_members">
    <option value="true">
      Yes
    </option>
    <option value="false">
      No
    </option>
  </select>

  <label for="start_time">Put date and start time:</label>
    <input required type="datetime-local" name="start_time" id="start_time"/>

  <input type="submit" value="Add Class">



</form>
