<form method="post" action="/fitness_classes/<%= @fitness_class.id() %>">

  <label for="name">Class Name:</label>
  <input id="name" type="text" name="name" value="<%= @fitness_class.name  %>"/>

  <label for="capacity">Capacity:</label>
  <input id="capacity" type="text" name="capacity" value="<%= @fitness_class.capacity  %>"/>

  <label for="duration">duration:</label>
  <input id="duration" type="text" name="duration" value="<%= @fitness_class.duration()  %>"/>

  <label for="premium_members">Premium Members Only:</label>
  <input id="premium_members" type="text" name="premium_members" value="<%= @fitness_class.premium_members  %>"/>


  <input type="submit" value="Update Class Details">

</form>
