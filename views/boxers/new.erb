<form method="post" action="/boxers">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name"/>

  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name"/>

  <label for="premium-member">Premium Member:
    <select name="trainer_id">
      <% for boxer in @boxers %>
      <option value="<%= boxer.premium_member %>"><%= boxer.premium_member %>
      </option>
      <% end %>
    </select>
  </label>



  <label for="trainer">Assign Trainer:
    <select name="trainer_id">
      <% for trainer in @trainers %>
      <option value="<%= trainer.id() %>"><%= trainer.full_name %>
      </option>
      <% end %>
    </select>
  </label>


  <input type="submit" value="Add Boxer">

</form>
