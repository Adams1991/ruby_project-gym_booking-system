<form method="post" action="/boxers">
  <label for="first-name">First Name:</label>
  <input required id="first-name" type="text" name="first_name"/>

  <label for="last-name">Last Name:</label>
  <input required id="last-name" type="text" name="last_name"/>

  <label for="premium-member">Premium Member:</label>
  <select name="premium_member">
    <option value="true">
      Yes
    </option>
    <option value="false">
      No
    </option>
  </select>




  <label for="trainer">Assign Trainer:
    <select required name="trainer_id">
      <% for trainer in @trainers %>
      <option value="<%= trainer.id() %>"><%= trainer.full_name %>
      </option>
      <% end %>
    </select>
  </label>


  <input type="submit" value="Add Boxer">

</form>
