<form action="/bookings" method="post">
  <label>
  Select a class:
    <select name="fitness_class_id">
      <% for fitness_class in @fitness_classes %>
      <% if fitness_class.is_full? then %>
      <% else %>
      <option value="<%= fitness_class.id() %>"><%= fitness_class.name %></option>
      <% end %>
      <% end %>
    </select>
  </label>

  <label>
    <select name="boxer_id" hidden>
    <option value="<%= @boxer.id() %>" selected="selected" >Make a booking for <%= @boxer.full_name() %></option>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="Add Booking">
</form>
